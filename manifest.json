{
  "manifest_version": 3,
  "name": "Spoiler Alert!",
  "version": "1.0",
  "description": "Never ever spoil another series or movie again!.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}