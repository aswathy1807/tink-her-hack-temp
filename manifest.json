{
  "manifest_version": 3,
  "name": "Spoiler Shield",
  "version": "1.0",
  "description": "Blurs spoilers based on keywords.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}